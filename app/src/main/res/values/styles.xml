<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorDarkerWhite</item>
    </style>

    <style name="ToolBarTextStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/lightRed</item>
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>
    
    <style name="HeadingText">
        <item name="android:color">@color/black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="BottomButtonEnabled">
    <item name="android:layout_marginStart">12dp</item>
    <item name="android:layout_marginEnd">12dp</item>
    <item name="android:layout_marginBottom">40dp</item>
    <item name="android:textColor">@color/lightRed</item>
    <item name="android:textSize" tools:ignore="SpUsage">32dp</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:enabled">true</item>
</style>

    <style name="BottomButtonDisabled">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize" tools:ignore="SpUsage">32dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:enabled">false</item>
    </style>

</resources>
